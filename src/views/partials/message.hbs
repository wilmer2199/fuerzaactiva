{{#if message}}
<div class="container p-4 flash-message-container"> <div class="row">
        <div class="col-sm-7 align-items-stretch mx-auto">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{message}}
                <button type="button" class="close custom-close-right" data-dismiss="alert"=aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if success}}
<div class="container p-4 flash-message-container"> <div class="row">
        <div class="col-sm-7 align-items-stretch mx-auto">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close custom-close-right" data-dismiss="alert"=aria-label="close" >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>
{{/if}}